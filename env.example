# Application
PROJECT_NAME="DevLog AI"
VERSION="0.1.0"
DEBUG=True
ENVIRONMENT="development"

# Server
HOST="0.0.0.0"
PORT=8000
RELOAD=True

# Database
# asyncpg 드라이버 사용 필수
DATABASE_URL="postgresql+asyncpg://devlog_user:devlog_pass@localhost:5432/devlog_db"

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_MEMORY="50mb"

# GitHub OAuth
GITHUB_CLIENT_ID="your_client_id"
GITHUB_CLIENT_SECRET="your_client_secret"
GITHUB_REDIRECT_URI="http://localhost:8000/api/v1/auth/github/callback"

# Encryption (생성: Fernet.generate_key().decode())
ENCRYPTION_KEY="your-32-byte-fernet-key"

# Gemini AI
GEMINI_API_KEY="your_gemini_api_key"
GEMINI_MODEL="gemini-2.0-flash-exp"
GEMINI_MAX_TOKENS=1000
GEMINI_TEMPERATURE=0.7

# CORS (JSON 문자열 형식)
ALLOWED_ORIGINS='["http://localhost:3000"]'

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# Docker & CloudType (프로덕션)
WORKERS=1
WORKER_CLASS="uvicorn.workers.UvicornWorker"
DOCKER_RESTART_POLICY="no"
